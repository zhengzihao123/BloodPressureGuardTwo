<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x614"
        android:layout_height="@dimen/y257"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y88"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:text="医生职称"
            android:textColor="#666666"
            android:textSize="@dimen/x32" />


        <RadioGroup
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y16">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y68"
                android:layout_marginBottom="@dimen/y16"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@drawable/doctortitle_rb_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="不限"
                    android:textColor="#333333"
                    android:textSize="@dimen/x30" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@drawable/doctortitle_rb_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="主任医师"
                    android:textColor="#333333"
                    android:textSize="@dimen/x30" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@drawable/doctortitle_rb_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="副主任医师"
                    android:textColor="#333333"
                    android:textSize="@dimen/x30" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y68"
                android:weightSum="3">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@drawable/doctortitle_rb_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="主治医师"
                    android:textColor="#333333"
                    android:textSize="@dimen/x30" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@drawable/doctortitle_rb_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="医师"
                    android:textColor="#333333"
                    android:textSize="@dimen/x30" />


            </LinearLayout>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="@dimen/x618"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/doctortitle_btn"
        android:text="确定"
        android:textColor="@color/green"
        android:textSize="@dimen/x36" />


</LinearLayout>