<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/search_item_head"
            android:layout_width="@dimen/x170"
            android:layout_height="@dimen/y170"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginTop="@dimen/y31"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y170"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginTop="@dimen/y31"
            android:layout_toRightOf="@id/search_item_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/search_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李为民"
                    android:textColor="#333333"
                    android:textSize="@dimen/x38" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:text="教授"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/x34" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16">

                <TextView
                    android:id="@+id/search_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="309医院"
                    android:textColor="#989898"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:text="普通外科"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/x34" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:background="@drawable/search_item_btn" />

        </LinearLayout>

        <TextView
            android:id="@+id/search_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_item_head"
            android:layout_marginTop="@dimen/y15"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/x16"
            android:text="点击事件就打死傲娇地势较低啊手机大祭司傲娇地阿斯就嗲三角地阿斯加基地撒娇地撒娇地贾斯丁静安寺大祭司爱的计算基地"
            android:textColor="#666666"
            android:textSize="@dimen/x30" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y7"
        android:background="#F9F9F9" />

</LinearLayout>
