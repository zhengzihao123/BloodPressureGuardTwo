<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <include
        layout="@layout/item_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <!--上传血压数据-->
    <LinearLayout
        android:id="@+id/mLayoutRQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="日期:"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mTextRQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="2017-06-10"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece" />

    <LinearLayout
        android:id="@+id/mLayoutSJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="时间:"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mTextSJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="10:00"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="设备名称:"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/mTextName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="(已供用户自己区分)"
            android:textColor="#000"
            android:textColorHint="#666666" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="高压:"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/mTextGY"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="30-200"
            android:numeric="integer"
            android:textColor="#000"
            android:textColorHint="#666666" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:text="mmHg"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="低压:"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/mTextDY"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="30-200"
            android:numeric="integer"
            android:textColor="#000"
            android:textColorHint="#666666" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:text="mmHg"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/mBtnSC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#4CBF5B"
        android:text="上传"
        android:textColor="#fff"
        android:textSize="20dp" />

</LinearLayout>